#!/usr/bin/env sh

date="$(date +'%d-%B-%y~%H:%M')"
dir="$HOME/DL"
pic="$dir/$date.png"

[ ! -d "$dir" ] && mkdir -pv "$dir"

full(){ 
    maim -u "$pic" ;
}

crop(){ 
    maim --select "$pic" ;
}

abort(){ 
    dunstify -i face-crying "Banido" ; 
    exit 1 ;
}

case "$1" in 
    full)
      full || abort
      xclip -selection c -t image/png "$pic"
      dunstify -u normal -i "$pic" "Captured" $pic
      ;;
    crop)
      crop || abort
      xclip -selection c -t image/png "$pic"
      dunstify -u normal -i "$pic" "Captured" $pic
      ;;
esac
